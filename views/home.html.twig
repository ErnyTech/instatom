<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script>
$(function(){
  $("form").on("submit", function(ev){
    // location without search nor hash
    var loc = location.protocol+'//'+location.hostname+(location.port?":"+location.port:"")+location.pathname;
    var $un = $("#un");
    var un = $.trim($un.val());
    if(un.length) {
      self.location.href = loc + un;
    }
    else {
      $(".form-group").addClass("has-error");
      console.log("error", $un);
    }


    ev.preventDefault();
    return false;
  })
});
</script>
</body>
